<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring">

	<route id="fileProxy">
		<from uri="file:in?maxMessagesPerPoll=1&amp;delay=30000" />
		<split>
			<tokenize token="\n" />
			<bean ref="sources" method="parse(${body},';')" />
		</split>
		<to uri="direct:pollStatus" />
	</route>

	<route id="writeCdrFile">
		<from uri="direct:writeCdrFile" />
		<bean ref="sources" method="exportChargingData" />
		<filter>
			<simple>${body} != null</simple>
			<to uri="file:out/cdr?fileName=${date:now:yyyyMMddHHmmss}.snmp.dat" />
			<log message="flush cdr to file: ${headers.CamelFileNameProduced}" />
		</filter>
	</route>

	<route id="writeCounterFile">
		<from uri="direct:writeCounterFile" />
		<bean ref="sources" method="exportCounters" />
		<filter>
			<simple>${body} != null</simple>
			<to uri="file:out/trace?fileName=${date:now:yyyyMMddHHmmss}.txt" />
			<log message="flush trace counters to file: ${headers.CamelFileNameProduced}" />
		</filter>
	</route>

</routes>
          
          